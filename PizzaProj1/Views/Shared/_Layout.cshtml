<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - PizzaProj1</title>
@* 	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/PizzaProj1.styles.css" asp-append-version="true" />
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Pacifico&family=Roboto:wght@200&display=swap" rel="stylesheet">



</head>

<body>

<header>
	<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-black ">
		<div class="container-fluid">
				<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="@Url.Content("~/Image/pizza logo.png")" style="width:50px; padding-right:5px;" alt="Pizza Paradiso" class="pizza-logo" /> <span style="font-family:'Pacifico', cursive;">Pizza Paradiso</span></a>
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
			        aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
				<ul class="navbar-nav flex-grow-1">
					@* 					<li class="nav-item">
						<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
					</li> *@

					<li class="nav-item">
							<a class="nav-link text-white  fa-lg" asp-area="" asp-controller="Checkout" asp-action="Checkout">
								<i class="bi bi-cart-fill" style="font-size: 18px"></i>
						</a>
					</li>
				</ul>
				<partial name="_LoginPartial"/>
			</div>
		</div>
	</nav>
</header>
@* <div class="banner">
	<img src="https://d1csarkz8obe9u.cloudfront.net/posterpreviews/pizza-banner-design-template-5623a47ee70d2ca4f3a4eca9c19a8039_screen.jpg?ts=1572691129" alt="Banner Image" style="width: 100%; height: auto;" />
</div> *@
<div class="container mainContainer mx-auto">
	<main role="main">
		@RenderBody()
	</main>
</div>

<footer class="footer text-muted mx-auto">
	<div class="container">
		&copy; 2023 - PizzaProj1 - <a asp-area="" asp-controller="Home">Privacy</a>
	</div>
</footer>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
<style>


	.container.mainContainer {
		padding: 30px; /* Adjust padding as needed */
		max-width: 100%; /* Ensure the container doesn't exceed the viewport width */
		background-color:black;
		padding-bottom:150px;
	}



	header {
		width: 100%;
		margin: 0;
		padding: 0;
	}

	.a {
		font-family: 'Pacifico', cursive;
		font-family: 'Roboto', sans-serif;

	}

	#footer {
		position: fixed;
		bottom: 0;
		width: 100%;
		height: 60px; /* Height of the footer */
		background: #6cf;
	}

</style>

</html>
