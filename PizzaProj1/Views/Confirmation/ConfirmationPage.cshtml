

@{
	ViewData["Title"] = "Confirmation";
}
@model List<PizzaProj1.Models.CartItem>

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Order Confirmation</title>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
</head>
<body>
<h4 class="title">Your order has been placed!</h4>
		
<div class="title">
	<img src="@Url.Content("~/Image/freedeliveryImage.png")" alt="pizza-delivery" class="pizza-delivery"/>
</div>


<div class="container tablecontainer" style="background-color:white">
	<table class="table">
		<thead>
		<tr>
			<th>Name</th>
			<th>Qty</th>
			<th>Price</th>
			<th>Total</th>
		</tr>
		</thead>
		<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.Pizza.Name</td>
				<td>@item.Quantity</td>
				<td>$@item.Pizza.Price</td>
				<td>$@(item.Quantity * item.Pizza.Price)</td>
			</tr>
		}

		<tr>
			<td colspan="3" class="text-right"><strong>Total Cost:</strong></td>
			<td>$@Model.Sum(item => item.Quantity * item.Pizza.Price)</td>
		</tr>
		</tbody>
	</table>
	<p class="title" style="color:black">Enjoy your pizza!</p>
</div>

<div class="ending">
	<a asp-area="" asp-controller="Home" asp-action="Index"><button class="btn btn-primary float-right">Home</button></a>
</div>


<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>


<style>

		.title {
			text-align: center;
			margin: auto;
			display: flex;
			flex-direction: column;
			align-items: center;
		}
		h4,p{
			color:white;
		}

		.pizza-delivery {
			width: 250px;
			padding:20px
		}

		.td {
			vertical-align: middle;
		}

		.tablecontainer, .ending{
			border-radius: 12px;
			max-width: 550px;
			margin: 20px auto;
			padding-bottom:20px;
		}

		.table{
			padding-botttom:20px;
		}


</style>
</body>
</html>
